<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <include
        layout="@layout/toolbar_base"
        android:id="@+id/toolbar" />

        <!-- 전역일 계산기 공간 -->
        <FrameLayout
            android:id="@+id/calculator_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp">

            <fragment
                android:id="@+id/Main_Calculator_Fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.example.militaryapp.Main_Calculator_Fragment"
                />
        </FrameLayout>

    <!-- 게시글 공간 -->
    <FrameLayout
        android:id="@+id/board_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginBottom="5dp">

        <fragment
            android:id="@+id/Main_Board_Fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.example.militaryapp.Main_Board_Fragment"
            />
    </FrameLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            app:itemBackground="@android:color/white"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@drawable/bottom_menu_selector_color"
            app:itemTextColor="@drawable/bottom_menu_selector_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_menu_list" />

</LinearLayout>




